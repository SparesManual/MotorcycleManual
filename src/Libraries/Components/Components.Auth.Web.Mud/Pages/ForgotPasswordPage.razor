@page "/forgotPassword"
@inherits BaseComponent<IForgotPasswordViewModel>
@implements IForgotPasswordView

@inject IForgotPasswordViewModelValidator m_validator

<EditForm Model="@ViewModel"
          OnValidSubmit="ViewModel!.SubmitCommand.Execute">
  <FluentValidator Validator="m_validator"/>
  <div class="container w-25 align-middle">
    <div class="row mb-4">
      <div class="col">
        <div class="row">
          <MudTextField @bind-Value="ViewModel!.Email" Label="Email" InputType="InputType.Email" Variant="Variant.Outlined" Class="w-100"></MudTextField>
        </div>
        <div class="row">
          <ValidationMessage For="() => ViewModel!.Email" class="mt-2"/>
        </div>
      </div>
    </div>

    <div class="row w-100">
      <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit">Request</MudButton>
    </div>
  </div>
</EditForm>