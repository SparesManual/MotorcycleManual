<Page x:Class="Components.Auth.WPF.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      Background="Transparent"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">
  <Grid Margin="15">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBox Width="250" Grid.Row="0" ui:ControlHelper.PlaceholderText="Email" Text="{Binding Email}"/>
    <TextBox Width="250" Grid.Row="1" ui:ControlHelper.PlaceholderText="Password" Margin="0 5 0 0" Text="{Binding Password}"/>
  </Grid>
</Page>
